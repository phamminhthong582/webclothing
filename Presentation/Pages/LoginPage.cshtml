@page
@model Presentation.Pages.LoginPageModel
@{
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f6f5f7;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .container {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px;
        width: 300px;
        max-width: 100%;
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    input {
        width: calc(100% - 20px);
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
    }

    button {
        width: calc(100% - 20px);
        padding: 10px;
        margin: 10px 0;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    button:hover {
        background-color: #0056b3;
    }

    .text-danger {
        color: red;
        margin-top: 10px;
    }
</style>

<div class="container">
    <h1>Sign in</h1>
    <form method="post" asp-page-handler="Login">
        <input type="email" asp-for="accountRespone.Email" required placeholder="Email"/>
        <br />
        <input type="password" asp-for="accountRespone.Password" required placeholder="Password"/>
        <br />
        <button type="submit">Sign In</button>
        <br />
        <div class="text-danger">@ViewData["Message"]</div>
    </form>
    <p>Don't have an account? <a href="#" id="signUpLink">Sign Up</a></p>
</div>

<script>
    document.getElementById('signUpLink').addEventListener('click', function (e) {
        e.preventDefault();
        // Redirect or handle signup logic here
        alert('Redirect to signup page or show signup form');
    });
</script>